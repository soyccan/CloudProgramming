{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "Meson: build",
            "command": "meson",
            "args": ["compile", "-C", "${workspaceFolder}/chord-part-1/chord/build"],
            "group": "build",
            "problemMatcher": {
                "base": "$meson-gcc",
                "fileLocation": ["relative", "${workspaceFolder}/chord-part-1/chord/build"],
            }
        }
    ]
}
